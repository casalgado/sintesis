<h1>Sources#index</h1>
<p>Find me in app/views/sources/index.html.erb</p>


<% if user_signed_in? %>
  <li>
  <%= @user.name %>
  </li>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>


<% @sources.each do |source| -%>
	<%= link_to (image_tag source.attachments.first.content, :style => "width: 200px;"), source_entry_path(source, source.entries.first) %>
<% end -%>

